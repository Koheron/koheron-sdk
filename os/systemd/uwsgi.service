[Unit]
Description=uWSGI
After=network.target

[Service]
ExecStartPre=/bin/mkdir -p /var/run/uwsgi
ExecStartPre=/bin/mkdir -p /var/log/uwsgi
ExecStart=/usr/local/bin/uwsgi --ini /etc/uwsgi/uwsgi.ini
Restart=always
KillSignal=SIGKILL
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
